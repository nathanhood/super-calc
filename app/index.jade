doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Super Calculator
    link(rel='stylesheet', href='css/app.css')
  body
    h1#title Super Calculator
    div.main
      table.calculator
        tbody
          tr
            td#display(colspan=5) 0
          tr
            td.number.button 7
            td.number.button 8
            td.number.button 9
            td.operator.button(data-op='add') +
            td.operator.button(data-op='sum') &Sigma;
          tr
            td.number.button 4
            td.number.button 5
            td.number.button 6
            td.operator.button(data-op='sub') -
            td.operator.button(data-op='exp') x&#8319;
          tr
            td.number.button 1
            td.number.button 2
            td.number.button 3
            td.operator.button(data-op='mul') &times;
            td.operator.button(data-op='root') &radic;
          tr
            td.number.button 0
            td.decimal.button .
            td.button#plusmn &plusmn;
            td.operator.button(data-op='div') &divide;
            td.operator.button(data-op='fac') !
          tr
            td.clear.button#clear-box(colspan=2) Clear
            td.clear.button#clear-all(colspan=2) Clear All
            td.push.button#push(colspan=1) Push
    div#pushtable
      #queue

    script(src='js/vendor/jquery-2.1.0.js')
    script(src='js/source/main.js')
